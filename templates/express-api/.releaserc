{
  "branches": "master",
  "preset": "conventionalcommits",
  "presetConfig": {
    "types": [
      {
        "type": "feat",
        "section": "Features âœ¨"
      },
      {
        "type": "fix",
        "section": "Bug Fixes ğŸ›"
      },
      {
        "type": "refactor",
        "section": "Code Refactoring ğŸ“¦"
      },
      {
        "type": "perf",
        "section": "Performance Improvements ğŸš€"
      },
      {
        "type": "revert",
        "section": "Reverts ğŸ—‘"
      },
      {
        "type": "docs",
        "section": "Docs ğŸ“–"
      }
    ]
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Latitude55 Task List"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false,
        "tarballDir": "dist"
      }
    ],
    [
      "@semantic-release/git",
      {
        "message": "chore(release): ${nextRelease.version} [skip ci]",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ]
      }
    ]
  ]
}
